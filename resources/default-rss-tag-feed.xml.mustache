<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ meta/site-name }} | {{ title }}</title>
    <link>{{ meta/root-url }}{{ tag/slug }}</link>
    <description>All {{ tag/label }} posts</description>
    <lastBuildDate>{{meta/last-modified}}</lastBuildDate>
    <atom:link href="{{meta/root-url}}{{ tag/slug }}feed.xml" rel="self" type="application/rss+xml"/>
    <generator>Morphy v0.0</generator>
    <docs>https://validator.w3.org/feed/docs/rss2.html</docs>
    {{# tag/items }}
      <item>
        <title>{{ title }}</title>
        <description>{{ content }}</description>
        <pubDate>{{ rss-date }}</pubDate>
        <link>{{ meta/root-url }}{{ slug }}</link>
        <guid isPermaLink="true">{{ meta/root-url }}{{ slug }}</guid>
      </item>
    {{/ tag/items }}
  </channel>
</rss>
